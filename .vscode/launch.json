{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.1.0",
  "configurations": [
    {
      "name": "Server(production)",
      "program": "${workspaceRoot}/bin/index.js",
      "cwd": "${workspaceRoot}",
      "sourceMaps": true,
      "args": [
        "--production"
      ],
      "outFiles": [
        "${workspaceRoot}/build/node/**/*.js"
      ],
      "type": "node",
      "request": "launch"
    },
    {
      "name": "Server",
      "program": "${workspaceRoot}/bin/index.js",
      "cwd": "${workspaceRoot}",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/build/node/**/*.js"
      ],
      "type": "node",
      "request": "launch"
    },
    {
      "name": "Server(nodemon)",
      "runtimeExecutable": "nodemon",
      "runtimeArgs": [
        "--debug=5858"
      ],
      "program": "${workspaceRoot}/bin/index.js",
      "restart": true,
      "port": 5858,
      "console": "integratedTerminal",
      "internalConsoleOptions": "openOnFirstSessionStart",
      "outFiles": [
        "${workspaceRoot}/build/node/**/*.js"
      ],
      "type": "node",
      "request": "launch"
    },
    {
      "name": "Debug single file",
      "runtimeExecutable": "babel-node",
      "program": "${workspaceRoot}/build/es5/parsers/html.js",
      "sourceMaps": true,
      "env": {
        "BABEL_ENV": "babel-node-debug"
      },
      "type": "node",
      "request": "launch"
    },
    {
      "name": "Start webpack",
      "program": "${workspaceRoot}/scripts/start.js",
      "cwd": "${workspaceRoot}",
      "sourceMaps": true,
      "type": "node",
      "request": "launch"
    },
    {
      "name": "Attach",
      "port": 5858,
      "outFiles": [
        "${workspaceRoot}/build/node/**/*.js"
      ],
      "type": "node",
      "request": "attach"
    }
  ]
}