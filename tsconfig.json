{
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "target": "es2015",
    "jsx": "react",
    "outDir": "build/es",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src",
    "typings"
  ]
}
