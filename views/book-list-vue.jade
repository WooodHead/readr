extends layouts/default

block content
  .mui-container
    #book-box
      .book-box
        h1.page-title 书籍列表
        ul.book-list.clearfix
          li(v-for="book in books")
            a(href="/books/{{ book._id }}")
              .book-cover
                img(v-bind:src="book.book_cover")
              .book-meta
                span.title {{ book.book_name }}
                span.book-author {{ book.book_author }}

  script(src="/lib/vue.js")
  script(src="/dist/js/book-list-vue.min.js")
